<div class="text-center" style="margin-top: 6vh;">

	<% if policy(@course).destroy? %>
	<%= link_to "Remove this Course", @course, class: " btn btn-success", method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
	<% if policy(@course).edit? %>
	<%= link_to "Edit this Course", edit_course_path(@course), class: " btn btn-success" %>
