
<div class="container" style="margin-top: 3vh;">
  <h1 style="margin-bottom: 4vh;">Create your own course.</h1>
  <%= simple_form_for(@course) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title , as: :string %> <br> <br>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :subject, as: :select, collection: Subject.all.map(&:category)%> <br> <br> <br> <br>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-treehouse" %>
    </div>
  <% end %>
</div>
