
<body style="background-color: #26292E;">
  <div class="container" style="height: 700px; margin-left: 80px; color: white;">
    <div class="row">


    <% @bookings.each do |booking| %>

    <% if booking.user_id == current_user.id %>
    <% course = booking.course %>
    <br>
    <h3>You have booked <%= course.title %> for <%= booking.hours %> hours</h3>
    <div class="card">
      Total Cost: $ <%= booking.hours * course.price %>
     </div>
     <%= link_to "Cancel this booking",  course_booking_path(:course_id, booking), class: "", method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <% end %>
    </div>
  </div>
</body>


