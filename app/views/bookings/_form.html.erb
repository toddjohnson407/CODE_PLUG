
<div class="container" style="margin-top: 3vh;">
  <div class="row">
    <h1 style="margin-bottom: 3vh;"></h1> <br> <br>
    <div class="col-md-8">

    <%= simple_form_for [@course, @booking] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :hours, as: :integer, placeholder: "How many hours would your like to purchase?" %> <br> <br>
      <br>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-treehouse", value: "Book this Course"%>
    </div>
    <% end %>
    </div>
  </div>
</div>
