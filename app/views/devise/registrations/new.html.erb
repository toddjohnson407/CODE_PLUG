<h2>Sign up</h2>

<div class="container" style="min-height: calc(100vh)">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true, placeholder: "First name" %>
        <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last name" %>
        <%= f.input :email, required: true, placeholder: "Email", autofocus: true %>
        <%= f.input :phone_number, required: true, placeholder: "Phone Number", autofocus: true %>
        <% if session[:teacher] %>
        <%= f.input :location, required: true, autofocus: true, placeholder: "Tell us where you are located" %>
        <%= f.input :description, required: true, autofocus: true, placeholder: "Tell us about yourself and your skills" %>
        <%= f.input :current_position, required: true, autofocus: true, placeholder: "Describe your current professional position" %>
         <%= f.input :languages, required: true, autofocus: true, placeholder: "State the coding languages you know" %>
        <%= f.input :teacher, as: :hidden, value: true %>
        <% end %>
        <%= f.input :password, required: true, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true , placeholder: "Password confirmation" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>


      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
      </div>
      <% end %> <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

